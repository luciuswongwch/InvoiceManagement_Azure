@page
@model InvoiceManagement.Pages.Invoices.CreateModel
@using Models

@{
    ViewData["Title"] = "Create";
}

<h3>Create an invoice</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Invoice.InvoiceAmount" class="control-label"></label>
                <input asp-for="Invoice.InvoiceAmount" class="form-control" />
                <span asp-validation-for="Invoice.InvoiceAmount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Invoice.InvoiceMonth" class="control-label"></label>
                <select asp-for="Invoice.InvoiceMonth" asp-items="Html.GetEnumSelectList<InvoiceMonth>()" class="form-control">
                    <option disabled selected>-- Select invoice month --</option>
                </select>
                <span asp-validation-for="Invoice.InvoiceMonth" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Invoice.InvoiceReceiver" class="control-label"></label>
                <input asp-for="Invoice.InvoiceReceiver" class="form-control" />
                <span asp-validation-for="Invoice.InvoiceReceiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="ms-2" asp-page="Index">
                    <button type="button" class="btn btn-secondary">Back to List</button>
                </a>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
